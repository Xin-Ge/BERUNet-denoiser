{
  "task": "BERUNet_Blind_v2_nb8_256_g020_64_Xavier_StepL2_1e4_50_gray"            //  root/task/images-models-options
  , "model": "plain"                   // "plain"
  , "gpu_ids": [0]

  , "scale": 1                          // broadcast to "netG" if SISR
  , "n_channels": 1                     // broadcast to "datasets", 1 for grayscale, 3 for color

  , "path": {
    "root": "denoising"                 // "denoising" | "superresolution"
    , "pretrained_netG": null           // path of pretrained model
  }

  , "datasets": {
    "train": {
      "name": "train_dataset"           // just name
      , "dataset_type": "denoising-blind"         // "dncnn" | "dnpatch" for dncnn,  | "fdncnn" | "ffdnet" | "sr" | "srmd" | "dpsr" | "plain" | "plainpatch"
      , "dataroot_H": "trainsets/trainH"// path of H training dataset
      , "dataroot_L": null              // path of L training dataset
      , "H_size": 256                   // patch size 40 | 64 | 96 | 128 | 192
      , "dataloader_shuffle": true
      , "dataloader_num_workers": 8
      , "dataset_enlarge_ratio": 1
      , "dataloader_batch_size": 16     // batch size 1 | 16 | 32 | 48 | 64 | 128
      , "sigma": [0, 50]               // 15, 25, 50 for DnCNN | [0, 75] for FFDNet and FDnCNN
    }
    , "test": {
      "name": "test_dataset"            // just name
      , "dataset_type": "denoising-blind"         // "dncnn" | "dnpatch" for dncnn,  | "fdncnn" | "ffdnet" | "sr" | "srmd" | "dpsr" | "plain" | "plainpatch"
      , "dataroot_H": "validationsets/set12"   // path of H testing dataset
      , "dataroot_L": null              // path of L testing dataset
      , "sigma_test": 50                // 15, 25, 50 for DnCNN and ffdnet
      , "image_divisor": 8
      , "image_extension": 0
    }
  }

  , "netG": {
    "net_type": "ResUNet_EnBorder_Blind_v2"          // "dncnn" | "fdncnn" | "ffdnet" | "srmd" | "dpsr" | "srresnet0" |  "srresnet1" | "rrdbnet" 
    , "in_nc": 1                       // input channel number
    , "out_nc": 1                      // ouput channel number
    , "nc": [64, 128, 256, 512]        // 64 for "dncnn"
    , "nb": 8                          // 17 for "dncnn", 20 for dncnn3, 16 for "srresnet"
    , "nt": 1                          // 
    , "gc": 32                         // unused
    , "ng": 2                          // unused
    , "reduction": 8                   // unused
    , "act_mode": "R"                  // "BR" for BN+ReLU | "R" for ReLU
    , "ker_size": 3                    // patch size
    , "is_padding": true               //
    , "bias": true                     //
    , "init_type": "xavier_normal"     // "orthogonal" | "normal" | "uniform" | "xavier_normal" | "xavier_uniform" | "kaiming_normal" | "kaiming_uniform"
    , "init_bn_type": "uniform"        // "uniform" | "constant"
    , "init_gain": 0.20
  }

  , "train": {
    "G_lossfn_type": "l2"               // "l1" preferred | "l2sum" | "l2" | "ssim" 
    , "G_lossfn_weight": 1.0            // default

    , "G_optimizer_type": "adam"        // fixed, adam is enough
    , "G_optimizer_lr": 1e-4            // learning rate
    , "G_optimizer_clipgrad": null         // unusedÂ·1

    , "G_scheduler_type": "MultiStepLR" // "MultiStepLR" is enough
    , "G_scheduler_milestones": [125000,250000,375000,500000,625000]
    , "G_scheduler_gamma": 0.5

    , "G_regularizer_orthstep": null    // unused
    , "G_regularizer_clipstep": null    // unused

    , "checkpoint_test": 5000           // for testing
    , "checkpoint_save": 5000           // for saving model
    , "checkpoint_print": 200           // for print
  }
}
